<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#26000000"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/msg1"
        android:gravity="center_horizontal"
        android:text="Please wait ..." />

    <ImageView
        android:id="@+id/custom_loading_imageView"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/farm_loader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_loading_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/msg2"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:text="Actual message here" />

</android.support.constraint.ConstraintLayout>