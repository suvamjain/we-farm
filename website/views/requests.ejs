<!DOCTYPE html>
<html>
  <head>
    <title>Government Schemes</title>
    
    <link rel="stylesheet" href="/stylesheet/dashboard.css" />
    
    <!--Meta for responsiveness-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
    <!--Fonts-->    
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'/>
    
    <!--Materialize-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/css/materialize.min.css">
    
  </head>
  <body>
    
    <!--NavBar-->    
    <div class="navbar-fixed">
      <nav id="the-nav">
        <div class="nav-wrapper white">
          <!--Logo-->
          <a href="/" class="brand-logo" style="color: #09f;padding-left: 30px">
            <img src="/stylesheets/img/new.png" style="height:56px;padding-top: 4px">
          </a>
          <!--Menu icon for small screen devices-->
          <a href="#" data-activates="mobile-demo" class="button-collapse right"><i class="material-icons" style="color:#000">menu</i></a>
          <!--Nav content-->
          <ul id="pc" class="right hide-on-med-and-down">
            <li><a class="waves-effect waves-lighten" href="/admin/view/farmers">View Farmers</a></li>
            <li><a class="waves-effect waves-lighten" href = '/admin/view/requests'>View Requests</a></li>
            <li><a class="waves-effect waves-lighten" href="/logout">Logout</a></li>
          </ul>
        </div>
      </nav>    
    </div>
    
    <!--Nav content for small screen devices-->
    <ul class="side-nav" id="mobile-demo">
      <li><a class="waves-effect waves-lighten" href="/admin/view/farmers">View Farmers</a></li>
      <li><a class="waves-effect waves-lighten" href = '/admin/view/requests'>View Requests</a></li>
      <li><a class="waves-effect waves-lighten" href="/logout">Logout</a></li>
    </ul>
    
    <!--Content-->
    <div id="content-div">
      <h1 class="header">Order history</h1>
      <div class="row">
        <div class="col s12 l6">
          <ul class="lol">
            <li class="head">Selling history</li>
            <% if(data.length != 0){ 
              for(var i = 0;i < data.length ;i++) {  if( data[i].operation == 2 ) { %>
                <li>&#9632;&nbsp;&nbsp;<span> Farmer <%= data[i].farmer_id %> wants to sell <%= data[i].type %> (Quantity : <%= data[i].quantity %>) (Rs.<%= data[i].price %>/-)-</span><b> Status : </b><%= data[i].status %>  <% if(data[i].status == 'pending'){ %><br><span><a href = "/admin/accept/request/<%= data[i].operation_id %>"><button id="Accept-button" type="button" class="btn waves-effect" >  Accept </button> </a> <a href = "/admin/deny/request/<%= data[i].operation_id %>"><button id="Reject-button" type="button" class="btn waves-effect" >  Deny </button></a></span> <% } %></li>
              <% } } } %>
          </ul>
          <span>--- Selling History Ends ---</span>
        </div>
        <div class="col s12 l6">
          <ul class="lol">
            <li class="head">Buying history</li>
            <% if(data.length != 0){ 
              for(var i = 0;i < data.length ;i++) {  if( data[i].operation == 1 ) { %>
                <li>&#9632;&nbsp;&nbsp;<span>Farmer <%= data[i].farmer_id %> wants to buy <%= data[i].type %> (Quantity : <%= data[i].quantity %>) (Rs.<%= data[i].price %>/-)-</span><b> Status : </b><%= data[i].status %>   <% if(data[i].status == 'pending'){ %><br><span><a href = "/admin/accept/request/<%= data[i].operation_id %>"><button id="Accept-button" type="button" class="btn waves-effect" >  Accept </button> </a> <a href = "/admin/deny/request/<%= data[i].operation_id %>"><button id="Reject-button" type="button" class="btn waves-effect" >  Deny </button></a></span> <% } %> </li>
              <% } }  } %>
          </ul>
          <span>--- Buying History Ends ---</span>
        </div>
      </div>
    </div>
    
    <!--Scripts import-->
     <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="/javascripts/script.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/js/materialize.min.js"></script>
    <script type="text/javascript" src="/javascripts/dashboard.js"></script>
  </body>
</html>